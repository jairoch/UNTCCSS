@page "/account/confirmEmail"
@inject NavigationManager NavigationManager

@using System.Text
@using UNTCCSS.Components.Messege
@using UNTCCSS.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using UNTCCSS.Components.Account

@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Confirm email</PageTitle>

<div class="vh-100 d-flex flex-column justify-content-center align-items-center p-4">
    <div style="max-width: 450px;">
        <div class="mx-auto shadow rounded">
            <StatusMessage Message="@statusMessage" />
        </div>

        <div class="mt-2 p-3 rounded" style="border: 1px solid #C9D3D1;">
            <i class="bi bi-envelope-check-fill" style="font-size: 2rem; color: #0EB82E;"></i>
            <div class="mt-1">
                <p class="text-muted mt-2" style="font-size: 1rem;">
                    ¡Listo! Tu correo electrónico ha sido confirmado exitosamente. Ahora puedes
                    <a href="/account/login" class="text-primary text-decoration-none" style="cursor: pointer;">iniciar sesión</a>,
                    ya que tu cuenta se encuentra habilitada.
                </p>
            </div>
        </div>
    </div>
</div>

