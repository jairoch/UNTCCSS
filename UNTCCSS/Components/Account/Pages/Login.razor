@using System.ComponentModel.DataAnnotations
@using UNTCCSS.Components.Layout
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using UNTCCSS.Data
@page "/account/login"
@layout MainLayout

<PageTitle>Log in</PageTitle>

<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card shadow" style="border-radius: 1rem; background: #FBFBFE; max-height:600px;">
                    <div class="row g-0">
                        <div class="col-md-5 d-none d-md-block">
                            <img src="/images/imagen-login-compressed.jpg" alt="login form" class="imagen" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-7 d-flex align-items-center">
                            <div class="card-body p-2 text-black h-100">

                                <EditForm Model="Input" OnValidSubmit="LoginUser" FormName="loginForm">
                                    <DataAnnotationsValidator />

                                    <!--Logo + Universidad Nacional de Trujillo-->
                                    <div class="d-flex align-items-center justify-content-end header-unt mx-4">
                                        <img src="/images/logo.png" alt="Logo" class="logo"/>
                                        <div class="d-flex flex-column ms-2">
                                            <span class="h3 fw-bold mb-0 open-sans-bold" style="color:#2A2A2A;">Universidad</span>
                                            <span class="h5  mb-0">Nacional de Trujillo</span>
                                        </div>                        
                                    </div>

                                    <!--Mensaje de alerta-->
                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="px-4">
                                            <div class="alert alert-danger m-0">
                                                @errorMessage
                                            </div>
                                        </div>
                                    }                                                                   

                                    <!--Content-->
                                    <div class="p-4">
                                        <div class="mb-3">
                                            <h4 class="mb-2 roboto-regular">Inicie sesión en su cuenta</h4>
                                        </div>


                                        <div class="form-group mb-3">
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text" id="inputGroup-sizing-lg">@@</span>
                                                <InputText id="Input.Email" @bind-Value="Input.Email" class="form-control form-control-lg roboto-regular" autocomplete="username" placeholder="Correo electrónico" />
                                            </div>
                                            <ValidationMessage For="() => Input.Email" class="text-danger" />
                                        </div>

                                        <div class="form-group mb-3">
                                            <InputText type="password" id="Input.Password" @bind-Value="Input.Password" class="form-control form-control-lg" autocomplete="current-password" placeholder="Contraseña" />
                                            <ValidationMessage For="() => Input.Password" class="text-danger" />
                                        </div>

                                        <div class=" mb-3">
                                            <button class="btn btn-dark btn-lg w-100" type="submit">Iniciar Sesión</button>
                                        </div>

                                        <div class="d-flex flex-column mt-4">
                                            <a class="small text-muted" href="account/forgotPassword">¿Olvidó su contraseña?</a>
                                            @* <p class="mb-5 pb-lg-2" style="color: #393f81;">"¿No tiene una cuenta? <a href="@(NavigationManager.GetUriWithQueryParameters("Account/Register", new Dictionary<string, object?> { ["ReturnUrl"] = ReturnUrl }))" style="color: #393f81;">Regístrese aquí</a></p> *@
                                            <div class="mt-2">
                                                <a href="#" class="small text-muted">Terms of use.</a>
                                                <a href="#" class="small text-muted">Privacy policy</a>
                                            </div>
                                        </div>                       
                                    </div>
                                </EditForm>                           
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

